<div class="row">

    <div class="col-md-12">

        <h2>
            Departments
            <a href="/departments/add" class="btn btn-success pull-right">Add New Department</a>
        </h2>
        <hr />

        {{#unless departments}}

            <div class="col-md-12 text-center">
                <strong>{{message}}</strong>
            </div>

        {{/unless}}

        {{#if departments}}
        <div class="table-responsive">

            <table class="table">
                <tr>
                    <th>Department Number</th>
                    <th>Department Name</th>
                    <th></th>
                </tr>
            
            {{#each departments}}

                <tr>
                    <td>
                        <a href="/department/{{departmentId}}">{{departmentId}}</a>
                    </td>
                    <td>
                        <a href="/department/{{departmentId}}">{{departmentName}}</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" href="/departments/delete/{{departmentId}}">Remove</a>
                    </td>
                </tr>
            
            {{/each}}

            </table>

        </div>
        {{/if}}

    </div>

</div>