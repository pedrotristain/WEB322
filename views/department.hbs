<div class="row">
    <div class="col-md-12">
      <h2>{{department.departmentName}} - Department: {{department.departmentId}}</h2>
      <br />
      <form method="post" action="/departments/update">
        <input type="hidden" name="departmentId" id="departmentId" value="{{department.departmentId}}" />
        
        <fieldset>
          
          <div class="row">
            <div class="col-md-12">
              <div class="form-group">
                <label for="firstName">Department Name:</label>
                <input class="form-control" id="departmentName" name="departmentName" type="text" value="{{department.departmentName}}" />
              </div>
            </div>
          </div>

        </fieldset>

        <hr />

        <input type="submit" class="btn btn-primary pull-right" value="Update Department" /><br /><br /><br />

      </form>

    </div>
</div>